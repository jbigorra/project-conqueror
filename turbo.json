{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULTS", ".env*"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": [
        // Clean the build artifacts
        "clean",
        // Needs to transpile the lib package to be able to use it in the behave package
        "@prj-conq/lib#dev:setup"
      ],
      "cache": false,
      "persistent": true
    },
    "dev:setup": {
      "cache": false,
      "persistent": false
    },
    "test": {
      "cache": false,
      "persistent": false
    },
    "tdd": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "persistent": false
    }
  }
}
